{
  "name": "crater",
  "scripts": {
    "start": "NODE_ENV=development USE_DOTENV=1 node src/server/index.js",
    "build": "rimraf build && concurrently \"npm run build:client\" \"npm run build:server\"",
    "build:server": "NODE_ENV=production webpack --config ./webpack/server.babel.js && NODE_ENV=production node transpile.babel.js && cd meteor && meteor build ../build/meteor --directory",
    "build:client": "NODE_ENV=production webpack --config ./webpack/prod.babel.js",
    "prod": "NODE_ENV=production USE_DOTENV=1 node build/server/index.js",
    "test": "node run-integration-test.babel.js"
  },
  "dependencies": {
    "compression": "^1.6.2",
